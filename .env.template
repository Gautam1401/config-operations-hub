# SharePoint Configuration
# Copy this file to .env and fill in your actual credentials

# Azure AD App Registration Details
SHAREPOINT_CLIENT_ID=your_client_id_here
SHAREPOINT_CLIENT_SECRET=your_client_secret_here
SHAREPOINT_TENANT_ID=your_tenant_id_here

# SharePoint Site Details
SHAREPOINT_SITE_URL=https://yourtenant.sharepoint.com/sites/yoursite
SHAREPOINT_FILE_PATH=/Shared Documents/ARC Configuration/data.xlsx

# Data Source Mode
USE_MOCK_DATA=True  # Set to False when using real SharePoint data

